  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch src/test/debug.js",
      "program": "${workspaceFolder}/src/test/debug.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "preLaunchTask": "npm: build",
      "sourceMaps": true
    },
    {
      "name": "Launch test/test/runner.js",
      "program": "${workspaceFolder}/test/test/runner.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "preLaunchTask": "npm: test:build",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "attach"
    }
  ]
}
